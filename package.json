{
  "name": "woocommerce-chatgpt-app",
  "version": "1.0.0",
  "description": "WooCommerce ChatGPT App - Display products with direct links to your store",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build:server": "tsc src/server.ts --outDir dist --module ES2020 --target ES2020 --moduleResolution node --esModuleInterop --skipLibCheck",
    "build:web": "esbuild web/components/product-list-lite.tsx --bundle --outfile=web/dist/product-list-lite.js --format=esm --minify",
    "build": "npm run build:server && npm run build:web",
    "start": "node dist/server.js",
    "dev": "npm run build && npm start"
  },
  "keywords": [
    "woocommerce",
    "chatgpt",
    "mcp",
    "ecommerce"
  ],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "esbuild": "^0.19.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
